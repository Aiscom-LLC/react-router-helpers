{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist",
    "target": "es5",
    "jsx": "react",
    "inlineSourceMap": true,
    "types": ["cypress", "jest"],
    "lib": ["ES2015", "dom"],
    "module": "esnext"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
